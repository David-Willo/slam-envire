<package>
    <description brief="Environment Representation Library">
	This library can be used to create a data representation of an environment.
	It works on Cartesian Spaces mostly, but could be extended to topological maps.
    </description>
    <author>Jakob Schwendner/jakob.schwendner@dfki.de</author>
    <copyright>
        DFKI/robotik@dfki.de
    </copyright>

    <depend package="gui/vizkit3d" optional="1" />
    <depend package="external/libply" />
    <depend package="base/types" />
    <depend package="base/numeric" />
    <depend package="base/logging" />
    <rosdep name="libkdtree" />
    <rosdep name="yaml" />
    <rosdep name="gdal" />
    <rosdep name="cgal" />
    <rosdep name="blas" />
    <rosdep name="lapack" />
    <rosdep name="box2d" />
    <tags>needs_opt</tags>
</package>
